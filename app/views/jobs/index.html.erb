<h1>Jobs#index</h1>
    <div ng-app="job-app" class="container">
      <div ng-controller="JobCtrl">
        <div class="form-group">
          <input ng-model="searchJob" name="searchbox" type="text" class="form-control search" id="searchbar" placeholder="Search">
        </div>
        <div class="scroll">
          <table class="table">
            <tbody id="resultsfield" >
              <tr class="job" ng-repeat="job in jobs | filter:searchJob ">
                <td class="links">
                    <label for="time_preference">Time Preference:</label>
                      <strong>{{job.time_preference}}</strong><br>
                    <label for="tools">Tools:</label>
                      <strong>{{job.tools}}</strong><br>
                    <label for="type_of_work">Type of Work:</label>
                      <strong>{{job.type_of_work}}</strong><br>
                    <label for="duration">Job Duration:</label>
                      <strong>{{job.duration}}</strong><br>
                    <label for="recurring">Recurring:</label>
                      <strong>{{job.recurring}}</strong><br>
                    <label for="location">Location:</label> 
                      <strong>{{job.location}}</strong><br>
                    <label for="contact_phone">Phone Number:</label>
                      <strong>{{job.contact_phone}}</strong><br>
                    <label for="contact_email">Email:</label>
                      <strong>{{job.contact_email}}</strong><br>
                    <br>

                <form ng-show="job.editing" ng-submit="updateJob(job);" class="form-group">

                  <label for="time_preference">Time Preference:</label>
                  <input ng-model="job.time_preference" type="time" name="time_preference" class="form-control" placeholder="Time Preference">
                  <label for="tools">Tools:</label>
                  <input ng-model="job.tools" type="text" name="tools" class="form-control" placeholder="Tools">
                  <label for="type_of_work">Type:</label>
                  <input ng-model="job.type_of_work" type="text" name="type_of_work" class="form-control" placeholder="Type of Work">
                  <label for="duration">Duration:</label>
                  <input ng-model="job.duration" type="text" name="duration" class="form-control" placeholder="Duration">
                  <label for="recurring">Recurring:</label>
                  <input ng-model="job.recurring" type="checkbox" name="recurring" class="form-control" placeholder="Recurring">
                  <label for="location">Location:</label>
                  <input ng-model="job.location" type="text" name="location" class="form-control" placeholder="Location">
                  <label for="contact_phone">Phone Number:</label>
                  <input ng-model="job.contact_phone" type="tel" name="contact_phone" class="form-control" placeholder="Phone Number">
                  <label for="contact_email">Email:</label>
                  <input ng-model="job.contact_phone" type="text" name="contact_phone" class="form-control" placeholder="Email">
                  <input type="submit" value="Update Job!" class="btn btn-primary">
                </form>

              <div ng-show="job.details">
                <div>{{job.description}}</div>
                <div>Created by {{job.user.name}}</div>
              </div>
            </td>
            <td class="show">
              <span ng-hide="job.details">
                <a ng-click="showJob(job);" class="btn btn-info" id="showicon"> SHOW </a>
              </span>
              <span ng-show="job.details">
              <a ng-click="hideJob(job);" class="btn btn-info"> HIDE </a>
              </span>
            </td>
<!-- ng-show will show elements when resource.user.id is equal to current_user.id. Inside the wickets is an if else statement. if there is a current user than log current_user.id or else its false.-->
            <td class="edit" >

                <span ng-hide="job.editing">
                <a ng-click="editJob(job);" class="btn btn-info"> EDIT </a>
                </span>

                <span ng-show="job.editing">
                <a ng-click="backJob(job);" class="btn btn-info"> BACK </a>
                </span>

            </td>
            <td class="delete" >
              <a ng-click="deleteJob(job);" class="btn btn-info"> DELETE </a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>



